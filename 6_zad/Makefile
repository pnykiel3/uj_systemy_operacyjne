DIR = `basename $(CURDIR)`
########################################
 LIB1 = funkcje
 EXEC1 = 6a
 EXEC2 = 6b
########################################
 EXECS = $(EXEC1) $(EXEC2)
########################################
 OBJS1 = $(EXEC1).o
 OBJS2 = $(EXEC2).o
########################################
LIBS1 = $(LIB1).c
########################################
 COFLAGS = -Wall -O
 LDFLAGS = -Wall -O
 CO = gcc
 LD = $(CO)
########################################
 %.o: %.c
	$(CO) $(COFLAGS) -c $<
########################################
 .PHONY: all
 all: $(EXECS)
########################################
 $(EXEC1): $(OBJS1) $(LIBS1)
	 $(LD) -o $@ $(LDFLAGS) $^
########################################
 $(EXEC2): $(OBJS2) $(LIBS1)
	 $(LD) -o $@ $(LDFLAGS) $^
 ########################################
.PHONY: run
run: $(EXECS)
	./$(EXEC1) 2 1 1
########################################
 .PHONY: clean
 clean:
	rm -f *.o  *~ $(EXECS)
########################################
 .PHONY: tar
 tar: clean
	(cd ../; tar -cvzf "$(DIR)".tar.gz  "$(DIR)" )
########################################